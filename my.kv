	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		pos : 640, 100 
		size : 100, 300
		size_hint : 10,0
		GridLayout:
			size_hint_y: None
			canvas.before:
				Color:
					rgba: 0.0, 0.0, 0.0, 1.0 
			id:animinfo
			size_hint_y: None
			cols: 1
			height: 100

			row_force_default: True
			row_default_height: dp(26)

<Row>:
    dr : ''
    idx : '' 
    Button: 
    	text: root.idx
    	disabled: True		
    	width: 10
    TextInput:
        text: root.dr
        multiline : False
        on_text_validate: app.ChangeDuration(root.idx, self.text)
     

			
<AnimPics>

	BoxLayout:
		orientation: 'horizontal'
		pos : app.size[0]//2-200,app.size[1]//2-150
		size : 400, 300
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1.0    # Blue 
			Rectangle:
				pos: self.pos
				size: self.size
	
		Image:
			id:imgsource
			source: app.currentimg
			size: 900, 900
			allow_stretch: True
			
			
			
